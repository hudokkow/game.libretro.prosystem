<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.prosystem"
		name="Atari 7800 (prosystem)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.prosystem.so"
                   library_linux="game.libretro.prosystem.so"
                   library_osx="game.libretro.prosystem.dylib"
                   library_windx="game.libretro.prosystem.dll"
                   library_wingl="game.libretro.prosystem.dll">
		<platforms>7800</platforms>
		<extensions>7800</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Prosystem v1.0.1</summary>
		<description>Source: https://github.com/libretro/prosystem-libretro</description>
		<platform>all</platform>
	</extension>
</addon>
